<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Circular ImageView -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/profile"
        tools:src="@tools:sample/avatars" />

    <!-- Hello, good day! TextView -->
    <TextView
        android:id="@+id/greeting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/greeting_message"
        android:textSize="20sp"
        android:layout_toEndOf="@id/profile_image"
        android:layout_alignTop="@id/profile_image"
        android:layout_marginStart="8dp" />

    <!-- Let's travel now! TextView -->
    <TextView
        android:id="@+id/travel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/let_s_travel_now"
        android:textSize="16sp"
        android:layout_below="@id/greeting_text"
        android:layout_toEndOf="@id/profile_image"
        android:layout_marginStart="8dp" />

    <!-- Search EditText -->
    <EditText
        android:id="@+id/search_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search"
        android:layout_below="@id/profile_image"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:autofillHints=""
        android:inputType="text" />

    <!-- Search Button -->
    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:background="@drawable/button_background"
        android:layout_below="@id/search_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- Travel Plannings TextView -->
    <TextView
        android:id="@+id/travel_plannings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/travel_plannings"
        android:textSize="18sp"
        android:layout_below="@id/search_button"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp" />

    <!-- RecyclerView for Travel Plannings -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/travel_plannings_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/travel_plannings_text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp" />

    <!-- Popular Places TextView -->
    <TextView
        android:id="@+id/popular_places_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popular_places"
        android:textSize="18sp"
        android:layout_below="@id/travel_plannings_recyclerview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp" />

    <!-- RecyclerView for Popular Places -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popular_places_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popular_places_text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp" />

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_curved_black"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:padding="16dp"
            android:layout_gravity="center"
            android:contentDescription="@string/home" />

        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_favorite"
            android:padding="16dp"
            android:layout_gravity="center"
            android:contentDescription="@string/favorite" />

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            android:padding="16dp"
            android:layout_gravity="center"
            android:contentDescription="@string/profile" />
    </LinearLayout>

</RelativeLayout>
